<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE plist PUBLIC "-//Apple//DTD PLIST 1.0//EN" "http://www.apple.com/DTDs/PropertyList-1.0.dtd">
<plist version="1.0">
<dict>
    <!-- App Configuration -->
    <key>CFBundleDevelopmentRegion</key>
    <string>$(DEVELOPMENT_LANGUAGE)</string>
    <key>CFBundleExecutable</key>
    <string>$(EXECUTABLE_NAME)</string>
    <key>CFBundleIdentifier</key>
    <string>$(PRODUCT_BUNDLE_IDENTIFIER)</string>
    <key>CFBundleInfoDictionaryVersion</key>
    <string>6.0</string>
    <key>CFBundleName</key>
    <string>$(PRODUCT_NAME)</string>
    <key>CFBundlePackageType</key>
    <string>$(PRODUCT_BUNDLE_PACKAGE_TYPE)</string>
    <key>CFBundleShortVersionString</key>
    <string>0.1.0</string>
    <key>CFBundleVersion</key>
    <string>1</string>

    <!-- Launch Configuration -->
    <key>LSRequiresIPhoneOS</key>
    <true/>

    <!-- Supported Device Orientations -->
    <key>UISupportedInterfaceOrientations</key>
    <array>
        <string>UIInterfaceOrientationPortrait</string>
        <string>UIInterfaceOrientationLandscapeLeft</string>
        <string>UIInterfaceOrientationLandscapeRight</string>
    </array>

    <key>UISupportedInterfaceOrientations~ipad</key>
    <array>
        <string>UIInterfaceOrientationPortrait</string>
        <string>UIInterfaceOrientationPortraitUpsideDown</string>
        <string>UIInterfaceOrientationLandscapeLeft</string>
        <string>UIInterfaceOrientationLandscapeRight</string>
    </array>

    <!-- SwiftUI Configuration -->
    <key>UIApplicationSceneManifest</key>
    <dict>
        <key>UIApplicationSupportsMultipleScenes</key>
        <true/>
    </dict>

    <!-- HealthKit Permissions -->
    <key>NSHealthShareUsageDescription</key>
    <string>OSRP needs access to your health data to collect research data for academic studies. Your data is encrypted and securely transmitted to AWS.</string>

    <key>NSHealthUpdateUsageDescription</key>
    <string>OSRP needs permission to update your health data.</string>

    <!-- Required HealthKit Capability -->
    <key>UIRequiredDeviceCapabilities</key>
    <array>
        <string>healthkit</string>
    </array>

    <!-- Background Modes -->
    <key>UIBackgroundModes</key>
    <array>
        <string>fetch</string>
        <string>processing</string>
        <string>remote-notification</string>
    </array>

    <!-- Motion Permission -->
    <key>NSMotionUsageDescription</key>
    <string>OSRP collects motion sensor data for research purposes.</string>

    <!-- Location Permission (if needed in future) -->
    <key>NSLocationWhenInUseUsageDescription</key>
    <string>OSRP may collect location data for research purposes when you use the app.</string>

    <key>NSLocationAlwaysAndWhenInUseUsageDescription</key>
    <string>OSRP may collect location data for research purposes.</string>

    <!-- Privacy - Required for iOS 14+ -->
    <key>NSPrivacyTracking</key>
    <false/>

    <!-- App Transport Security -->
    <key>NSAppTransportSecurity</key>
    <dict>
        <key>NSAllowsArbitraryLoads</key>
        <false/>
    </dict>
</dict>
</plist>
